<form action="/attendee/new" method="post">
  <div class="form-group row">
    <label for="input-first-name" class="col-sm-2 col-form-label">First name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="input-first-name" name="first_name" placeholder="First name">
    </div>
  </div>
  <div class="form-group row">
    <label for="input-last-name" class="col-sm-2 col-form-label">Last name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="input-last-name" name="last_name" placeholder="Last name">
    </div>
  </div>
  <div class="form-group row">
    <label for="input-age" class="col-sm-2 col-form-label">Age</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="input-age" name="age" placeholder="Age">
    </div>
  </div>
  <div class="form-group row">
    <label for="input-likes-beer" class="col-sm-2 col-form-label">Do you like beer?</label>
    <div class="col-sm-10">
      <input type="boolean" class="form-control" id="input-likes-beer" name="likes_beer" placeholder="Enter true or false">
    </div>
  </div>
  <button type="submit" class="btn btn-outline-success">Submit</button>
</form>
