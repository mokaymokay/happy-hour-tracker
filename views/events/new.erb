<h4>Create New Event</h4>
<br>
<form action="/events/new" method="post">
  <div class="form-group row">
    <label for="event-name" class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="event-name" name="name" placeholder="Name">
    </div>
  </div>
  <div class="form-group row">
    <label for="event-location" class="col-sm-2 col-form-label">Location</label>
    <div class="col-sm-10">
      <input type="text" class="form-control" id="event-location" name="location" placeholder="Location">
    </div>
  </div>
  <div class="form-group row">
    <label for="event-capacity" class="col-sm-2 col-form-label">Capacity</label>
    <div class="col-sm-10">
      <input type="number" class="form-control" id="event-capacity" name="capacity" placeholder="Capacity">
    </div>
  </div>
  <button type="submit" class="btn btn-outline-success">Submit</button>
</form>
<br>
<% @attendees.each do |attendee| %>
    <input type="checkbox" name="event[attendee_ids][]" value="<%=attendee.id%>" id="<%=attendee.id%>"> <%=attendee.first_name%> <%=attendee.last_name%>&nbsp;&nbsp;</input>
<% end %>
